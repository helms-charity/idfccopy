{
  "definitions": [
    {
      "title": "Testimonial Cards",
      "id": "cards-testimonial",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block",
            "template": {
              "name": "Testimonial Cards",
              "model": "cards-testimonial",
              "filter": "cards-testimonial"
            }
          }
        }
      }
    },
    {
      "title": "Card",
      "id": "card",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block/item",
            "template": {
              "name": "Card",
              "model": "card"
            }
          }
        }
      }
    }
  ],
  "models": [
    {
      "id": "cards-testimonial",
      "fields": [
        {
          "component": "boolean",
          "name": "swipable",
          "label": "Enable Swiper",
          "valueType": "boolean",
          "value": false
        },
        {
          "component": "boolean",
          "name": "autoplayEnabled",
          "label": "Autoplay",
          "valueType": "boolean",
          "value": false
        },
        {
          "component": "number",
          "name": "startingCard",
          "label": "Starting Card (Index, default is 0)",
          "valueType": "number",
          "value": 0,
          "validation": {
            "numberMin": 0,
            "customErrorMsg": "Starting card index must be 0 or greater"
          }
        }
      ]
    },
    {
      "id": "card",
      "fields": [
        {
          "component": "reference",
          "valueType": "string",
          "name": "image",
          "label": "Image",
          "multi": false
        },
        {
          "component": "text",
          "name": "imageAlt",
          "label": "Alt Text"
        },
        {
          "component": "select",
          "name": "quote-icon",
          "label": "Quote Icon",
          "valueType": "string",
          "description": "Icon shown at top of this testimonial card.",
          "options": [
            {
              "name": "None",
              "value": ""
            },
            {
              "name": "Inverted commas",
              "value": "inverted-commas"
            }
          ]
        },
        {
          "component": "text",
          "name": "person-name",
          "label": "Person Name",
          "valueType": "string",
          "description": "Author or reviewer name"
        },
        {
          "component": "text",
          "name": "product-name",
          "label": "Product Name",
          "valueType": "string",
          "description": "Product being reviewed (e.g. card name)"
        },
        {
          "component": "number",
          "name": "author-rating",
          "label": "Author Rating",
          "valueType": "number",
          "description": "Star rating 1-5 (displayed as stars)",
          "validation": {
            "numberMin": 1,
            "numberMax": 5
          }
        },
        {
          "component": "text",
          "name": "review-date",
          "label": "Date",
          "valueType": "string",
          "description": "Review date. Required format: YYYY-MM-DD (e.g. 2025-03-26). Shown on page in readable format."
        }
      ]
    }
  ],
  "filters": [
    {
      "id": "cards-testimonial",
      "components": [
        "card"
      ]
    }
  ]
}
